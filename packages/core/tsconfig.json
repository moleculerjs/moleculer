{
  "extends": "@moleculer/tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "types": ["node"]
  },
  "include": [
    // add all typechecked paths here
    "src/**/*", // source folder
    "./.*.cjs", // root commonjs config files
    "./.*.mjs", // root esm config files
    "./.*.js", // root javascript config files
    "./*.js", // root javascript files
    "./*.mjs", // root esm files
    "__mocks__/**/*" // jest mocks
  ]
}
